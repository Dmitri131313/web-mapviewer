{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["node", "jsdom"],
        "allowJs": true,
        // Cypress needs this module resolution mode in order to work (@vue/tsconfig wants to function in bundler mode)
        // see https://github.com/cypress-io/cypress/issues/26308
        "moduleResolution": "node"
    }
}
